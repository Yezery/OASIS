#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="$basedir/../../../../../../@ethereumjs+rlp@4.0.1/node_modules/@ethereumjs"
else
  export NODE_PATH="$NODE_PATH:$basedir/../../../../../../@ethereumjs+rlp@4.0.1/node_modules/@ethereumjs"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../../@ethereumjs+rlp@4.0.1/node_modules/@ethereumjs/rlp/bin/rlp" "$@"
else
  exec node  "$basedir/../../../../../../@ethereumjs+rlp@4.0.1/node_modules/@ethereumjs/rlp/bin/rlp" "$@"
fi
