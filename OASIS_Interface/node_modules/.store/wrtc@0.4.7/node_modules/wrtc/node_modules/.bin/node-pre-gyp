#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="$basedir/../../../../../node-pre-gyp@0.13.0/node_modules"
else
  export NODE_PATH="$NODE_PATH:$basedir/../../../../../node-pre-gyp@0.13.0/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../node-pre-gyp@0.13.0/node_modules/node-pre-gyp/bin/node-pre-gyp" "$@"
else
  exec node  "$basedir/../../../../../node-pre-gyp@0.13.0/node_modules/node-pre-gyp/bin/node-pre-gyp" "$@"
fi
